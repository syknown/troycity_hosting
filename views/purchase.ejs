                        </label>
                      </div>
                      <div class="form-check">
                        <input
                          class="form-check-input"
                          type="checkbox"
                          id="autoRenew"
                        />
                        <label class="form-check-label" for="autoRenew">
                          Enable Auto-Renewal
                        </label>
                      </div>
                    </div>

                    <!-- Payment Details -->
                    <div class="col-12">
                      <label class="form-label">Payment Method</label>
                      <div class="form-floating">
                        <select
                          class="form-control"
                          id="paymentMethod"
                          required
                        >
                          <option value="M-Pesa" selected disabled>
