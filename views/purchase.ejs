          <div class="row g-5">
            <div class="col-lg-6 pt-5 text-center text-lg-start">
              <h1 class="display-4 text-white mb-4 animated slideInLeft">
                <%= package.name %>
              </h1>
              <p class="text-white animated slideInLeft">
                <%= package.description %>
              </p>
              <ul>
                <% if (Array.isArray(package.features)) { %> <%
                package.features.forEach(feature => { %>
                <li><%= feature %></li>
                <% }) %> <% } else if (typeof package.features === 'string') {
                %> <% package.features.split(',').forEach(feature => { %>
