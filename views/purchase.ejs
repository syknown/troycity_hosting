              <ol>
                <% if (Array.isArray(package.features)) { %> <%
                package.features.forEach(feature => { %>
                <li><%= feature %></li>
                <% }); %> <% } else if (typeof package.features === 'string') {
                %> <% package.features.split(',').forEach(feature => { %>
                <li><%= feature.trim() %></li>
