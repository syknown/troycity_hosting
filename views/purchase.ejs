                      id="nameserverSection"
                      style="display: none"
                    >
                      <label class="form-label">Custom Nameservers</label>
                      <input
                        type="text"
                        class="form-control"
                        id="primaryNameserver"
                        placeholder="Primary Nameserver (e.g., ns1.yourhost.com)"
                      />
                      <input
                        type="text"
                        class="form-control mt-2"
                        id="secondaryNameserver"
                        placeholder="Secondary Nameserver (e.g., ns2.yourhost.com)"
                      />
                    </div>

                    <!-- Hosting Plan Selection -->
                    <div class="col-12">
                      <div class="form-floating">
                        <input
                          id="package"
                          type="text"
                          class="form-control mt-2"
                          value="<%= package.name %>"
                          readonly
                        />
                        <label for="hostingPlan">Selected Package</label>
                      </div>
                    </div>
                    <div class="col-12">
                      <div class="form-floating">
                        <input
                          id="package_cost"
                          type="text"
                          class="form-control mt-2"
                          value="<%= package.price %>"
                          readonly
                        />
                        <label for="hostingPlan"
                          >Selected Package Cost <%= package.price %>
