    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const existingDomainOption = document.getElementById("existingDomain");
        const nameserverSection = document.getElementById("nameserverSection");

        document
          .querySelectorAll("input[name='domainOption']")
          .forEach((radio) => {
            radio.addEventListener("change", function () {
              if (existingDomainOption.checked) {
                nameserverSection.style.display = "block";
              } else {
                nameserverSection.style.display = "none";
              }
            });
          });
      });
    </script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        document
          .getElementById("purchaseForm")
          .addEventListener("submit", async function (event) {
            event.preventDefault(); // Prevent default form submission

            // Collect form data
            const formData = {
              name: document.getElementById("name").value,
              email: document.getElementById("email").value,
              phone: document.getElementById("phone").value,
              company: document.getElementById("company").value || null,
              address: document.getElementById("address").value,
              city: document.getElementById("city").value,
              country: document.getElementById("country").value,
              selected_package: document.getElementById("package").value,
              package_cost: document.getElementById("package_cost").value,
              domainName: document.getElementById("domainName").value,
              primaryNameserver:
                document.getElementById("primaryNameserver")?.value || null,
              secondaryNameserver:
                document.getElementById("secondaryNameserver")?.value || null,
            };
            console.loh;

            try {
              // Send data to API
              const response = await fetch("/api/newhosting", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify(formData),
              });

              if (response.ok) {
                const result = await response.json();
                console.log(
                  `Order submitted successfully! Invoice ID: ${result.invoiceId}`
                );
                // ✅ Redirect to order summary page with invoiceId as a query parameter
                window.location.href = `/order-summary/${result.invoiceId}`;
              } else {
                alert("Failed to submit order. Please try again.");
              }
            } catch (error) {
              console.error("Error submitting order:", error);
              alert("An error occurred. Please try again.");
            }
          });
      });
    </script>

