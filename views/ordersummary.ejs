    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const form = document.getElementById("paymentForm");
        const submitButton = form.querySelector("button[type='submit']");

        form.addEventListener("submit", async function (event) {
          event.preventDefault(); // Prevent default form submission

          // Get form values
          const phone = document.getElementById("phone").value;
          const invoiceId = document.getElementById("invoiceId").value;
          const amount = document.getElementById("inv_amount").value;

          // Disable submit button and change text
          submitButton.disabled = true;
          submitButton.textContent = "Processing...";

          try {
            const response = await fetch("/api/payment", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify({ phone, invoiceId, amount }),
            });

            const result = await response.json();

            if (response.ok) {
              alert("Payment request sent successfully.");
            } else {
              alert("Payment request failed: " + result.message);
            }
          } catch (error) {
            alert("An error occurred: " + error.message);
          }

          // Change button to Retry after 30 seconds
          submitButton.textContent = "Retry";
          setTimeout(() => {
            submitButton.disabled = false;
            submitButton.textContent = "Pay";
          }, 30000);
        });

        // Create a second button to check payment status
        const checkPaymentButton = document.createElement("button");
        checkPaymentButton.textContent = "Check Payment";
        checkPaymentButton.classList.add(
          "btn",
          "btn-secondary",
          "w-100",
          "mt-2"
        );

        // Append button **outside** the form to avoid form submission issues
        form.parentElement.appendChild(checkPaymentButton);

        checkPaymentButton.addEventListener("click", async function (event) {
          event.preventDefault(); // Prevent default behavior

          const invoiceId = document.getElementById("invoiceId").value;

          try {
            const response = await fetch(`/api/check-payment/${invoiceId}`);
            const result = await response.json();
            alert("Payment status: " + result.status);
            if (result.status === "completed") {
              alert("Payment successful. Receipt send to your email");
              //send api request to send invoice as paid

              window.location.href = `/payment-sucess/${invoiceId}`;
            }
          } catch (error) {
            alert("Error checking payment status: " + error.message);
          }
        });
      });
    </script>
    <script>
      function downloadInvoice() {
        // Replace '12345' with the actual invoice ID dynamically
        const invoiceId = "<%= order.invoiceId %>";

        // API endpoint to download invoice
        const downloadUrl = `/api/download-invoice/${invoiceId}`;

        // Create a hidden anchor element
        const link = document.createElement("a");
        link.href = downloadUrl;
        link.setAttribute("download", `invoice_${invoiceId}.pdf`);

        // Append to body and trigger click
        document.body.appendChild(link);
        link.click();

        // Remove the anchor element after clicking
        document.body.removeChild(link);
      }
